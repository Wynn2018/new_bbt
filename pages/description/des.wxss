page{
  height: 100%;
}

.container-row {
  display: flex;
  flex-direction: row;
}

.try {
  background-color: green;
  height: 30px;
  padding-left: 10px;
  font-weight: 600;
}

.head {
  margin-top: 25px;
  padding-left: 10px;
  height: 40px;
  font-weight: 800;
}

.des {
  min-height: 100px;
  padding-left: 10px;
}

.container {
  display: flex;
}

.photo {
  position: fixed;
  top: 10px;
  right: 10px;
  border-right: 0px;
  height: 50px;
  width: 50px;
  background-color: black;
}

.bottom {
  display: flex;
  position: sticky;
  bottom: 0px;
  width: 100%;
  height: 50px;
  background-color: rgb(221, 220, 220);
}

.img {
  margin-left: 10px;
  width: 94%;
}

.title {
