.input_block {
  width: 100%;
  height: 50px;
  background-color: rgb(210, 231, 255);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap; /*决定换行方式*/
}

.input {
  background-color: white;
  color: grey;
  margin-left: 5%;
  width: 80%;
  height: 30px;
  margin-top: 10px;
  border-radius: 15px;
  text-align: center;
  line-height: 30px;
}

.search_button {
  width: 30px;
  height: 30px;
}

.search_button_block {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 15%;
  height: 50px;
}

.info_block{
  width:90%;
  margin-left: 2.5%;
  border: 1px solid grey;
  margin-top: 10px;
  align-items: center;
  justify-content: center;
  padding: 2.5%;
}

.name{
  width:100%;
  font-size: 20px;
  font-weight: 600;
}

.info{
  margin-top: 5px;
  width:100%;
  font-size: 15px;
  color:grey;
}