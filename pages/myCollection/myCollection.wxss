page {
  height: 100%;
  background: rgb(228, 223, 223);
}

.input-search {
  top: 20%;
  left: 4.25%;
  height: 62.92%;
  min-height: 0;
  width: 85%;
  background: rgb(216, 214, 214);
  position: relative;
  z-index: 2;
  text-align: center;
}

.search {
  top: 20%;
  left: 4.25%;
  height: 62.92%;
  width: 7%;
  border-top-left-radius: 0.5em;
  border-bottom-left-radius: 0.5em;
  background: #fff;
  position: relative;
  z-index: 2;
}

.blank {
  top: 20%;
  left: 4.25%;
  height: 62.92%;
  width: 1%;
  background: #fff;
  position: relative;
  z-index: 2;
}

.search-button {
  top: 8%;
  height: 100%;
  width: 100%;
  position: relative;
}

.title {
  display: flex;
  flex-direction: row;
  background: white;
  height: 7%;
}

.tool-bar {
  height: 6%;
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 2%;
  background: white;
}

.tool-bar-item {
  top: 12%;
  height: 80%;
  width: 12%;
  position: relative;
}

.tool-bar-text {
  width: 12%;
  height: 80%;
  font-size: 20px;
  align-content: center;
  position: relative;
}

