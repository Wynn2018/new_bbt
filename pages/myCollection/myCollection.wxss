.container {
  display: flex;
  flex-direction: row;
}

.container-column {
  width: 50%;
  column-count: 1; /*设置列数*/
  padding-left: 3%;
  z-index: -1;
}

.item {
  height: 25%;
  width: 98.5%;
  background: white;
  margin-top: 5px;
}

.picture {
  width: 100%;
  height: 60%;
  border-top-left-radius: 0.4em;
  border-top-right-radius: 0.4em;
}

.goTop {
  width: 50px;
  height: 50px;
  position: fixed;
  bottom: 40rpx;
  right: 10px;
  overflow: hidden;
  z-index: 500;
}

.description {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  font-size: 30rpx;
  margin-top: 2.5%;
}
