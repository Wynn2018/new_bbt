
<view style='padding-bottom:15px;width:100%;background-color:rgb(222, 222, 222);'>

  <view style="width:100%;height:5px;"></view>

  <view id='{{item._id}}' wx:for='{{item_}}' wx:key='{{index}}' style='margin-bottom:5px;padding-top:10px;padding-bottom:10px;width:95%;margin-left:2.5%;background-color:white;'>
    <view class="des">
      {{item.intro}}
    </view>
    <view style="display:flex;flex-direction:row;flex-wrap: wrap;margin-top:20px;">
      <view style="width:50%;margin-left:2.5%;height:60px;">
        <view style="color:grey;font-size:16px;height:20px;line-height:20px;">起点：{{item.start}} 终点：{{item.end}}</view>
        <view style="color:grey;font-size:16px;height:20px;line-height:20px;">联系方式:{{item.phone}}</view>
        <view style="width:220px;color:grey;font-size:16px;height:20px;line-height:20px;">截止时间:{{item.ddl}}</view>
      </view>
      <view style="font-size:16px;height:20px;margin-top:40px;position:absolute;right:15px;">报酬:{{item.pay}}</view>
    </view>
  </view>
</view>










